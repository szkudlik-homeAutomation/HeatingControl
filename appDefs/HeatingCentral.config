######### debug loggers
CONFIG_LOGGER=y
CONFIG_LOGLEVEL_3=y
CONFIG_LOGLEVEL_1=n
CONFIG_LOGLEVEL_2=n
CONFIG_LOGGER_TRANSPORT_SERIAL=y
CONFIG_LOGGER_SERIAL_PORT_1=y
CONFIG_LOGGER_TRANSPORT_SPEED=115200


######### communication configuration for Arduino mega board
CONFIG_TLE8457_SERIAL_PORT_4=y
CONFIG_TLE8457_COMM_DEV_ID_FROM_EEPROM=n 
CONFIG_TLE8457_COMM_FORCE_DEV_ID=1 
CONFIG_OUTPUT_QUEUE_SIZE=140

######### TCP/IP networking
CONFIG_NETWORK=y
CONFIG_TCP_WATCHDOG=y
CONFIG_TCP_WATCHDOG_TIMEOUT=300
CONFIG_IP_ADDRESES_FROM_EEPROM=y
CONFIG_TELNET_SERVER=y
CONFIG_HTTP_SERVER=y
CONFIG_SENSOR_STATE_SERVLET=y
CONFIG_OUTPUT_CONTROL_SERVLET=y
# to be enabled
CONFIG_OUTPUT_CONTROL_SERVLET_USE_TLE8457_SERIAL=n
CONFIG_HTTP_SERVER_INSTANCE=n

######### worker tasks
CONFIG_WORKER_PROCESS=y
CONFIG_NODE_SCAN_TASK=y
CONFIG_NODE_SCAN_EEPROM_STATUS_TASK=n


######### sensors
CONFIG_SENSORS=y
CONFIG_SENSORS_FACTORY=y
CONFIG_SENSORS_FACTORY_INSTANCE=n

CONFIG_SENSOR_HUB=y
CONFIG_SENSOR_HUB_GENERATE_EVENTS=y
# sensor hub capable of recieving messages from remote sensors
CONFIG_SENSOR_HUB_FOR_REMOTE_SENSORS=y
CONFIG_SENSOR_HUB_MESSAGE_RECIEVER=y

# JSON output for sensors
CONFIG_HTTP_SEVLETS_SENSORS=y
CONFIG_SENSORS_JSON_OUTPUT=y
CONFIG_SENSORS_JSON_OUTPUT_INSTANCE=n
CONFIG_DS1820_SENSOR_AGGREAGETED_JSON_OUTPUT=y
CONFIG_SHT3_DIS_SENSOR_JSON_OUTPUT=y
CONFIG_TGS2603_ODOUR_SENSOR_JSON_OUTPUT=y

CONFIG_SYSTEM_STATUS_SENSOR=y
CONFIG_DS1820_SENSOR=y
CONFIG_IMPULSE_SENSOR=y
CONFIG_OUTPUT_STATE_SENSOR=y
CONFIG_PT100_ANALOG_SENSOR=y
CONFIG_SIMPLE_DIGITAL_INPUT_SENSOR=y

# on central node no events need to be sent to other nodes
CONFIG_SENSOR_SEND_EVENTS_USING_SERIAL=n
CONFIG_SENSORS_STORE_IN_EEPROM=n

# control of sensors from central node
CONFIG_SENSORS_CONTROL_NODE=y
CONFIG_SENSORS_CONTROL_NODE_CONTROL_REMOTE_SENSORS=y
CONFIG_TELNET_COMMANDS_SENSORS=y
# no advanced control of sensors
CONFIG_TELNET_COMMANDS_SENSORS_EEPROM_CONTROL=n
CONFIG_TELNET_COMMANDS_SENSORS_REMOTE_CONTROL=n

############### app specific configuration
CONFIG_HEATING_CIRCLE_CONTROL=y

CONFIG_INPUT_PROCESS=n
CONFIG_OUTPUT_PROCESS=y
CONFIG_OUTPUT_PROCESS_NUM_OF_PINS=16
CONFIG_OUTPUT_PROCESS_INSTANCE=y

CONFIG_OUTPUT_PROCESS_PIN0=26
CONFIG_OUTPUT_PROCESS_PIN1=27
CONFIG_OUTPUT_PROCESS_PIN2=28
CONFIG_OUTPUT_PROCESS_PIN3=29
CONFIG_OUTPUT_PROCESS_PIN4=30
CONFIG_OUTPUT_PROCESS_PIN5=31
CONFIG_OUTPUT_PROCESS_PIN6=32
CONFIG_OUTPUT_PROCESS_PIN7=33
CONFIG_OUTPUT_PROCESS_PIN8=34
CONFIG_OUTPUT_PROCESS_PIN9=35
CONFIG_OUTPUT_PROCESS_PIN10=36
CONFIG_OUTPUT_PROCESS_PIN11=37
CONFIG_OUTPUT_PROCESS_PIN12=38
CONFIG_OUTPUT_PROCESS_PIN13=39
CONFIG_OUTPUT_PROCESS_PIN14=40
CONFIG_OUTPUT_PROCESS_PIN15=41

